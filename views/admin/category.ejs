
<<body>
    <%- include("../partials/admin/header") %>
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Categories</h1>
            <p class="page-subtitle">Manage your product categories</p>
        </div>

        <!-- Search and Add Category Section -->
        <div class="search-add-section">
            <div class="search-add-container">
                <!-- Search Form -->
                <form class="search-form" method="GET" action="/admin/categories">
                    <input type="text" name="search" class="search-input" placeholder="Search categories..." value="<%= search || '' %>">
                    <button type="submit" class="btn btn-primary">Search</button>
                   <button type="button" class="btn btn-secondary" id="clear-button">Clear</button>
                </form>

                <!-- Add Category Button (Changed from form to link) -->
                <div class="add-category-section">
                    <a href="/admin/addCategory" class="btn btn-success">Add Category</a>
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="table-section">
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Sl No.</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (categories && categories.length > 0) { %>
                            <% categories.forEach((category, index) => { %>
                                <tr>
                                    <td><%= ((currentPage - 1) * 4) + index + 1 %></td>
                                    <td><%= category.name %></td>
                                    <td>
                                        <% if (category.isActive) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                   <td>
            <a href="/admin/editCategories/<%= category._id %>" class="btn btn-sm btn-warning">Edit</a>
                <button class="btn btn-sm <%= category.isActive ? 'btn-danger' : 'btn-success' %> block-unblock-btn"
                 data-id="<%= category._id %>" 
                 data-action="<%= category.isActive ? 'block' : 'unblock' %>">
             <%= category.isActive ? 'Block' : 'Unblock' %>
              </button>
            </td>

                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center">No categories found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination-section">
                <div class="pagination-info">
                    Showing <strong><%= ((currentPage - 1) * 4) + 1 %></strong> to <strong><%= Math.min(currentPage * 4, totalItems) %></strong> of <strong><%= totalItems %></strong> results
                </div>
                <nav>
                    <ul class="pagination">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>">‹ Previous</a>
                            </li>
                        <% } %>
                        
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + search : '' %>"><%= i %></a>
                            </li>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>">Next ›</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <script>

   
// --- Common functions ---
function updateCategoryTable(categories, currentPage) {
    const tbody = document.querySelector("tbody");
    tbody.innerHTML = '';

    const limit = 4; // match backend pagination limit

    if (categories.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" class="text-center">No categories found</td></tr>';
        return;
    }

    categories.forEach((category, index) => {
        const statusBadge = category.isActive
            ? '<span class="badge bg-success">Active</span>'
            : '<span class="badge bg-danger">Inactive</span>';

        const blockUnblockButton = category.isActive
            ? `<button class="btn btn-sm btn-danger block-unblock-btn" data-id="${category._id}" data-action="block">Block</button>`
            : `<button class="btn btn-sm btn-success block-unblock-btn" data-id="${category._id}" data-action="unblock">Unblock</button>`;

        tbody.innerHTML += `
            <tr>
                <td>${((currentPage - 1) * limit) + index + 1}</td>
                <td>${category.name}</td>
                <td>${statusBadge}</td>
                <td>
                    <a href="/admin/editCategories/${category._id}" class="btn btn-sm btn-warning">Edit</a>
                    ${blockUnblockButton}
                </td>
            </tr>
        `;
    });
}

function updatePagination(currentPage, totalPages) {
    const paginationContainer = document.querySelector('.pagination');
    paginationContainer.innerHTML = '';

    if (currentPage > 1) {
        paginationContainer.innerHTML += `
            <li class="page-item">
                <a class="page-link" href="?page=${currentPage - 1}">‹ Previous</a>
            </li>`;
    }

    for (let i = 1; i <= totalPages; i++) {
        paginationContainer.innerHTML += `
            <li class="page-item ${i === currentPage ? 'active' : ''}">
                <a class="page-link" href="?page=${i}">${i}</a>
            </li>`;
    }

    if (currentPage < totalPages) {
        paginationContainer.innerHTML += `
            <li class="page-item">
                <a class="page-link" href="?page=${currentPage + 1}">Next ›</a>
            </li>`;
    }
}

// --- Fetch helper ---
function fetchCategories(page = 1, search = '') {
    fetch(`/admin/api/categories?search=${search}&page=${page}`)
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                updateCategoryTable(data.categories, data.currentPage);
                updatePagination(data.currentPage, data.totalPages);
            }
        })
        .catch(err => console.error('Fetch categories error:', err));
}

// --- Search form ---
document.querySelector('.search-form').addEventListener('submit', function(e) {
    e.preventDefault();
    const searchValue = document.querySelector('.search-input').value;
    fetchCategories(1, searchValue);
});

// --- Clear search ---
document.getElementById('clear-button').addEventListener('click', () => {
    document.querySelector('.search-input').value = '';
    fetchCategories(1, '');
});

// --- AJAX pagination ---
document.addEventListener('click', function (e) {
    if (e.target.classList.contains('page-link')) {
        e.preventDefault();
        const href = e.target.getAttribute('href');
        const urlParams = new URLSearchParams(href.split('?')[1]);
        const page = parseInt(urlParams.get('page')) || 1;
        const searchValue = document.querySelector('.search-input').value || '';
        fetchCategories(page, searchValue);
    }
});

// --- Block/Unblock ---
// --- Block/Unblock with SweetAlert ---
document.addEventListener('click', async (e) => {
    if (e.target.classList.contains('block-unblock-btn')) {
        const categoryId = e.target.getAttribute('data-id');
        const action = e.target.getAttribute('data-action');

        // 1️⃣ Ask confirmation first
        const confirmResult = await Swal.fire({
            title: `Are you sure you want to ${action} this category?`,
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: action === "block" ? "#d33" : "#28a745",
            cancelButtonColor: "#6c757d",
            confirmButtonText: `Yes, ${action} it!`
        });

        if (!confirmResult.isConfirmed) return; // stop if cancelled

        try {
            // 2️⃣ Call backend
            const response = await fetch(`/admin/categories/${action}/${categoryId}`, {
                method: 'POST'
            });
            const data = await response.json();

            // 3️⃣ Handle backend response
            if (data.success) {
                Swal.fire("Success!", data.message, "success").then(() => {
                    const activePageEl = document.querySelector('.pagination .active .page-link');
                    const currentPage = activePageEl ? parseInt(activePageEl.textContent) : 1;
                    const searchValue = document.querySelector('.search-input').value || '';
                    fetchCategories(currentPage, searchValue);
                });
            } else {
                Swal.fire("Error!", data.message, "error");
            }
        } catch (err) {
            console.error('Failed to block/unblock:', err);
            Swal.fire("Error!", "Something went wrong. Try again later.", "error");
        }
    }
});


// --- Handle back/forward navigation ---
window.addEventListener("pageshow", function (event) {
    if (event.persisted) {
        const activePageEl = document.querySelector('.pagination .active .page-link');
        const currentPage = activePageEl ? parseInt(activePageEl.textContent) : 1;
        const searchValue = document.querySelector('.search-input').value || '';
        fetchCategories(currentPage, searchValue);
    }
});


    </script>
    
</body>
</html>