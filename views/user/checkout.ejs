    <script>
  // Checkout Page JavaScript - Complete Fixed Version
let selectedAddressId = null;
let isEditMode = false;
const totalAmount = <%= totalAmount %>;
const walletBalance = <%= walletBalance || 0 %>;
const COD_LIMIT = 1000;

// Initialize page
document.addEventListener('DOMContentLoaded', function() {
    console.log("Checkout page loaded");
    initializeCheckout();
    checkOrderAvailability();
    initializeCODRestriction();
    
    // ENSURE COUPON DROPDOWN IS HIDDEN ON PAGE LOAD
    const couponDropdown = document.getElementById('coupon-dropdown');
    if (couponDropdown) {
        couponDropdown.style.display = 'none';
    }
});

function initializeCODRestriction() {
    if (totalAmount > COD_LIMIT) {
        const codOption = document.getElementById('cod-option');
        const codRadio = document.getElementById('cod');
        
        if (codRadio) {
            codRadio.disabled = true;
            
            if (codRadio.checked) {
                const onlinePayment = document.getElementById('razorpay');
                if (onlinePayment) {
                    onlinePayment.checked = true;
                    handlePaymentChange('razorpay');
                }
            }
        }
        
        updatePlaceOrderButtonState();
    }
}

function handlePaymentChange(paymentMethod) {
    console.log("üí∞ Payment method changed to:", paymentMethod);
    
    if (paymentMethod === 'cod' && totalAmount > COD_LIMIT) {
        Swal.fire({
            icon: 'error',
            title: 'COD Not Available',
            html: `
                <div style="text-align: left; padding: 10px;">
                    <p><strong>‚ùå Cash on Delivery is not available</strong></p>
                    <p><strong>Order Total:</strong> ‚Çπ${totalAmount.toLocaleString()}</p>
                    <p><strong>COD Limit:</strong> ‚Çπ${COD_LIMIT.toLocaleString()}</p>
                    <hr style="margin: 10px 0;">
                    <p style="color: #666;">Please select <strong>Pay Online</strong> or <strong>Wallet</strong> to proceed.</p>
                </div>
            `,
            confirmButtonText: 'Switch to Online Payment',
            confirmButtonColor: '#3085d6',
            allowOutsideClick: false
        }).then(() => {
            const onlinePayment = document.getElementById('razorpay');
            const razorpayOption = document.querySelector('[data-method="razorpay"]');
            
            if (onlinePayment && razorpayOption) {
                onlinePayment.checked = true;
                razorpayOption.classList.add('selected');
                
                const codOption = document.querySelector('[data-method="cod"]');
                if (codOption) {
                    codOption.classList.remove('selected');
                }
            }
        });
        
        document.getElementById('cod').checked = false;
        return false;
    }
    
    const paymentOptions = document.querySelectorAll('.payment-option');
    paymentOptions.forEach(option => {
        option.classList.remove('selected');
        if (option.dataset.method === paymentMethod) {
            option.classList.add('selected');
        }
    });
    
    updatePlaceOrderButtonState();
    return true;
}

function updatePlaceOrderButtonState() {
    const placeOrderBtn = document.getElementById('placeOrderBtn');
    const hasUnavailableItems = document.querySelectorAll('.order-item.blocked, .order-item.out-of-stock, .order-item.low-stock').length > 0;
    const selectedPayment = document.querySelector('input[name="paymentMethod"]:checked');
    const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
    
    if (hasUnavailableItems || !selectedPayment || !selectedAddress) {
        placeOrderBtn.disabled = true;
        placeOrderBtn.style.opacity = '0.6';
        placeOrderBtn.style.cursor = 'not-allowed';
        
        if (hasUnavailableItems) {
            placeOrderBtn.textContent = 'Cannot Place Order (Unavailable Items)';
        } else if (!selectedAddress) {
            placeOrderBtn.textContent = 'Select Delivery Address';
        } else {
            placeOrderBtn.textContent = 'Select Payment Method';
        }
    } else {
        placeOrderBtn.disabled = false;
        placeOrderBtn.style.opacity = '1';
        placeOrderBtn.style.cursor = 'pointer';
        placeOrderBtn.textContent = `Proceed to Buy - ‚Çπ${totalAmount.toLocaleString()}`;
    }
}

function checkOrderAvailability() {
    updatePlaceOrderButtonState();
}

async function validateAndPlaceOrder() {
    try {
        Swal.fire({
            title: 'Checking availability...',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        const stockResponse = await fetch('/checkStockAvailability', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        });

        const stockData = await stockResponse.json();
        
        if (!stockData.success) {
            throw new Error('Failed to check stock availability');
        }

        if (stockData.hasUnavailableItems && stockData.unavailableItems.length > 0) {
            Swal.close();
            
            let errorHtml = '<div style="text-align: left; padding: 10px;">';
            errorHtml += '<p style="margin-bottom: 15px; color: #d33; font-weight: bold;">‚ùå Cannot place order due to the following issues:</p>';
            
            const blockedItems = stockData.unavailableItems.filter(item => item.reason === 'blocked');
            const outOfStockItems = stockData.unavailableItems.filter(item => item.reason === 'out-of-stock');
            const lowStockItems = stockData.unavailableItems.filter(item => item.reason === 'low-stock');
            
            if (blockedItems.length > 0) {
                errorHtml += '<p style="font-weight: bold; margin-top: 10px;">üîí Blocked Products:</p><ul style="margin-left: 20px;">';
                blockedItems.forEach(item => {
                    errorHtml += `<li>${item.productName} (${item.size})</li>`;
                });
                errorHtml += '</ul>';
            }
            
            if (outOfStockItems.length > 0) {
                errorHtml += '<p style="font-weight: bold; margin-top: 10px;">üì¶ Out of Stock:</p><ul style="margin-left: 20px;">';
                outOfStockItems.forEach(item => {
                    errorHtml += `<li>${item.productName} (${item.size})</li>`;
                });
                errorHtml += '</ul>';
            }
            
            if (lowStockItems.length > 0) {
                errorHtml += '<p style="font-weight: bold; margin-top: 10px;">‚ö†Ô∏è Insufficient Stock:</p><ul style="margin-left: 20px;">';
                lowStockItems.forEach(item => {
                    errorHtml += `<li>${item.productName} (${item.size}) - ${item.message}</li>`;
                });
                errorHtml += '</ul>';
            }
            
