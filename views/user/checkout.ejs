function updatePriceBreakdown(subtotal, discount, totalAmount) {
    const priceBreakdown = document.getElementById('price-breakdown');
    
    let discountRow = '';
    if (discount > 0) {
        discountRow = `
            <div class="price-row discount-row">
                <span class="label">Coupon Discount</span>
                <span class="value discount-value">-‚Çπ${discount.toLocaleString()}</span>
            </div>
        `;
    }
    
    const totalItems = window.checkoutData.cartItems.length;
    
    priceBreakdown.innerHTML = `
        <div class="price-row">
            <span class="label">Subtotal (${totalItems} items)</span>
            <span class="value">‚Çπ${subtotal.toLocaleString()}</span>
        </div>
        <div class="price-row shipping">
            <span class="label">Shipping</span>
            <span class="value free">FREE</span>
        </div>
        ${discountRow}
        <div class="price-row total-row">
            <span class="label bold">Total Amount</span>
            <span class="value total-value bold">‚Çπ${totalAmount.toLocaleString()}</span>
        </div>
    `;
    
    const placeOrderBtn = document.getElementById('placeOrderBtn');
    if (placeOrderBtn && !placeOrderBtn.disabled) {
        placeOrderBtn.textContent = `Proceed to Buy - ‚Çπ${totalAmount.toLocaleString()}`;
    }
    
    window.checkoutData.totalAmount = totalAmount;
    window.checkoutData.discount = discount;
}

document.addEventListener('click', function(event) {
    const couponWrapper = document.querySelector('.coupon-toggle-wrapper');
    if (couponWrapper && !couponWrapper.contains(event.target)) {
        const dropdown = document.getElementById('coupon-dropdown');
        if (dropdown) {
            dropdown.style.display = 'none';
            const toggleBtn = document.querySelector('.coupon-toggle-btn');
            if (toggleBtn) {
                toggleBtn.classList.remove('active');
            }
        }
    }
});
