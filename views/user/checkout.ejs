<%- include("../partials/user/header") %>

<body>
    <main class="main">
        <div class="container">
            <div class="checkout-header">
                <h1>Checkout</h1>
                <div class="breadcrumb">
                    <a href="/cart"><span>Cart</span></a> > <span class="active">Checkout</span> 
                </div>
            </div>

            <div class="checkout-content">
                <!-- Left Section - Address -->
                <div class="checkout-left">
                    <div class="address-section">
                        <div class="section-header">
                            <h2>Delivery Address</h2>
                            <button class="add-address-btn" onclick="openAddressModal()">+ Add Address</button>
                        </div>
                        
                        <div class="address-list">
                            <% if (addresses && addresses.length > 0) { %>
                                <% addresses.forEach((addr, index) => { %>
                                    <div class="address-card <%= addr.isDefault ? 'selected' : '' %>" data-address-id="<%= addr._id %>">
                                        <div class="address-radio">
                                            <input type="radio" name="selectedAddress" value="<%= addr._id %>" 
                                                   <%= addr.isDefault ? 'checked' : '' %> 
                                                   onchange="selectAddress('<%= addr._id %>')">
                                        </div>
                                        <div class="address-info">
                                            <div class="address-header">
                                                <h4><%= addr.name %></h4>
                                                <span class="address-tag <%= addr.saveAs.toLowerCase() %>"><%= addr.saveAs %></span>
                                                <% if (addr.isDefault) { %>
                                                    <span class="default-tag">Default</span>
                                                <% } %>
                                            </div>
                                            <p class="address-details">
                                                <%= addr.houseName %>, <%= addr.street %><br>
                                                <%= addr.city %>, <%= addr.state %> - <%= addr.pincode %><br>
                                                <%= addr.country %>
                                            </p>
                                            <p class="address-contact">
                                                üìû <%= addr.number %> | ‚úâÔ∏è <%= addr.email %>
                                            </p>
                                            <button class="btn btn-success" type="button" onclick="editAddress('<%= addr._id %>')">Edit Address</button>  
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="no-address">
                                    <p>No addresses found. Please add a delivery address.</p>
                                    <button class="add-first-address-btn" onclick="openAddressModal()">Add Your First Address</button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Right Section - Order Summary -->
                <div class="checkout-right">
                    <div class="order-summary">
                        <h2>Order Summary</h2>

                        <!-- Order Items with Real Stock Status -->
                        <div class="order-items">
                            <% if (cartItems && cartItems.length > 0) { %>
                                <% cartItems.forEach(item => { 
                                    let stockStatus = 'in-stock';
                                    let stockMessage = '‚úÖ In Stock';
                                    let isAvailable = true;
                                    
                                    if (item.productId.isBlocked) {
                                        stockStatus = 'blocked';
                                        stockMessage = '‚ùå Product Unavailable';
                                        isAvailable = false;
                                    } else {
                                        const sizeStock = item.productId.stock.find(stock => stock.size === item.size);
                                        if (!sizeStock || sizeStock.quantity <= 0) {
                                            stockStatus = 'out-of-stock';
                                            stockMessage = '‚ùå Out of Stock';
                                            isAvailable = false;
                                        } else if (sizeStock.quantity < item.quantity) {
                                            stockStatus = 'low-stock';
                                            stockMessage = `‚ö†Ô∏è Only ${sizeStock.quantity} left`;
                                            isAvailable = false;
                                        }
                                    }
                                %>
                                    <div class="order-item <%= stockStatus %>" 
                                         data-product-id="<%= item.productId._id %>" 
                                         data-size="<%= item.size %>"
                                         data-available="<%= isAvailable %>">
                                        <img src="/Uploads/products/<%= item.productId.productImage[0] %>" 
                                             alt="<%= item.productId.productName %>" 
                                             class="item-image">
                                        <div class="item-details">
                                            <h4><%= item.productId.productName %></h4>
                                            <p class="item-size">Size: <%= item.size %></p>
                                            <p class="item-quantity">Qty: <%= item.quantity %></p>
                                            <p class="stock-status <%= stockStatus %>"><%= stockMessage %></p>
                                            <% if (!isAvailable) { %>
                                                <p class="remove-suggestion">Remove this item to proceed</p>
                                            <% } %>
                                        </div>
                                        <div class="item-price">
                                            ‚Çπ<%= (item.itemTotal || (item.price * item.quantity)).toLocaleString() %>
                                        </div>
                                        <% if (!isAvailable) { %>
                                            <button 
                                                type="button" 
                                                class="remove-item-btn" 
                                                onclick="removeItem('<%= item._id %>')">
                                                √ó
                                            </button>
                                        <% } %>
                                    </div>
                                <% }); %>
                            <% } %>
                        </div>

                        <!-- Coupon Section -->
                        <div class="coupon-section">
                            <% if (appliedCoupon) { %>
                                <div class="applied-coupon">
                                    Applied Coupon: <%= appliedCoupon.code %> (Discount: ‚Çπ<%= discount.toLocaleString() %>)
                                    <button onclick="removeCoupon()">Remove</button>
                                </div>
                            <% } else if (coupons && coupons.length > 0) { %>
                                <a href="#" onclick="toggleCouponDropdown(event)">Apply Coupon</a>
                                <div id="coupon-dropdown" style="display: none; margin-top: 10px;">
                                    <select id="coupon-select">
                                        <option value="">Select a coupon</option>
                                        <% coupons.forEach(coupon => { %>
                                            <option value="<%= coupon.couponCode %>">
                                                <%= coupon.couponCode %> - 
                                                <% if (coupon.type === 'percentageDiscount') { %>
                                                    <%= coupon.discount %>% off (Min ‚Çπ<%= coupon.minPurchase %>)
                                                <% } else { %>
                                                    ‚Çπ<%= coupon.discount %> off (Min ‚Çπ<%= coupon.minPurchase %>)
                                                <% } %> - <%= coupon.description || '' %>
                                            </option>
                                        <% }) %>
                                    </select>
                                    <button onclick="applyCoupon()">Apply</button>
                                </div>
                            <% } else { %>
                                <p>No available coupons</p>
                            <% } %>
                        </div>

                        <!-- Price Breakdown -->
                        <div class="price-breakdown">
                            <div class="price-row">
                                <span>Subtotal (<%= totalItems %> items)</span>
                                <span>‚Çπ<%= subtotal.toLocaleString() %></span>
                            </div>
                            <div class="price-row">
                                <span>Shipping Charges</span>
                                <span class="free">FREE</span>
                            </div>
                            <% if (discount > 0) { %>
                                <div class="price-row discount">
                                    <span>Coupon Discount</span>
                                    <span>-‚Çπ<%= discount.toLocaleString() %></span>
                                </div>
                            <% } %>
                            <div class="price-row total">
                                <span>Total Amount</span>
                                <span>‚Çπ<%= totalAmount.toLocaleString() %></span>
                            </div>
                        </div>

                        <!-- Payment Methods -->
                        <div class="payment-section">
                            <h3>Select Payment Method</h3>
                            <div class="payment-methods">
                                <!-- COD Payment Option with dynamic availability -->
                                <div class="payment-option <%= paymentMethod === 'cod' ? 'selected' : '' %>" 
                                     data-method="cod" 
                                     id="cod-option"
                                     <% if (totalAmount > 1000) { %>style="opacity: 0.5; pointer-events: none;" title="Not available for orders above ‚Çπ1000"<% } %>>
                                    <div class="payment-radio">
                                        <input type="radio" name="paymentMethod" value="cod" id="cod" 
                                               <%= paymentMethod === 'cod' ? 'checked' : '' %> 
                                               <% if (totalAmount > 1000) { %>disabled<% } %>
                                               onchange="handlePaymentChange('cod')">
                                    </div>
                                    <div class="payment-info">
                                        <div class="payment-icon">üí∞</div>
                                        <div>
                                            <h4>Cash on Delivery</h4>
                                            <% if (totalAmount > 1000) { %>
                                                <p class="cod-restriction" style="color: #d33; font-size: 0.85rem; margin: 0; font-weight: bold;">
                                                    ‚ùå Not available for orders above ‚Çπ1,000
                                                </p>
                                            <% } else { %>
                                                <p>Pay when you receive your order</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="payment-option <%= paymentMethod === 'razorpay' ? 'selected' : '' %>" data-method="razorpay">
                                    <div class="payment-radio">
                                        <input type="radio" name="paymentMethod" value="razorpay" id="razorpay" 
                                               <%= paymentMethod === 'razorpay' ? 'checked' : '' %> 
                                               onchange="handlePaymentChange('razorpay')">
                                    </div>
                                    <div class="payment-info">
                                        <div class="payment-icon">üí≥</div>
                                        <div>
                                            <h4>Pay Online</h4>
                                            <p>Pay securely using card, UPI, or wallet</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="payment-option <%= paymentMethod === 'wallet' ? 'selected' : '' %>" data-method="wallet">
                                    <div class="payment-radio">
                                        <input type="radio" name="paymentMethod" value="wallet" id="wallet" 
                                               <%= paymentMethod === 'wallet' ? 'checked' : '' %> 
                                               onchange="handlePaymentChange('wallet')">
                                    </div>
                                    <div class="payment-info">
                                        <div class="payment-icon">üíº</div>
                                        <div>
                                            <h4>Wallet</h4>
                                            <p>Pay using your wallet balance</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Place Order Button -->
                        <button class="place-order-btn" onclick="validateAndPlaceOrder()" id="placeOrderBtn">
                            Proceed to Buy - ‚Çπ<%= totalAmount.toLocaleString() %>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Add/Edit Address Modal -->
    <div id="addressModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Add New Address</h3>
                <span class="close-modal" onclick="closeAddressModal()">&times;</span>
            </div>
            <form id="addressForm" class="address-form">
                <input type="hidden" id="addressId" name="addressId">
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Full Name *</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="number">Phone Number *</label>
                        <input type="tel" id="number" name="number" required maxlength="10">
                    </div>
                    <div class="form-group">
                        <label for="pincode">Pincode *</label>
                        <input type="text" id="pincode" name="pincode" required maxlength="6">
                    </div>
                </div>
                <div class="form-group">
                    <label for="houseName">House Name/Number *</label>
                    <input type="text" id="houseName" name="houseName" required>
                </div>
                <div class="form-group">
                    <label for="street">Street/Area *</label>
                    <input type="text" id="street" name="street" required>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="city">City *</label>
                        <input type="text" id="city" name="city" required>
                    </div>
                    <div class="form-group">
                        <label for="state">State *</label>
                        <input type="text" id="state" name="state" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="country">Country *</label>
                    <input type="text" id="country" name="country" value="India" required readonly>
                </div>
                <div class="form-group">
                    <label for="saveAs">Save Address As *</label>
                    <select id="saveAs" name="saveAs" required>
                        <option value="">Select Type</option>
                        <option value="Home">Home</option>
                        <option value="Work">Work</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="form-group checkbox-group">
                    <label>
                        <input type="checkbox" id="isDefault" name="isDefault">
                        Make this my default address
                    </label>
                </div>
                <div class="form-actions">
                    <button type="button" class="cancel-btn" onclick="closeAddressModal()">Cancel</button>
                    <button type="submit" class="save-btn">Save Address</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

    <script>
        // Checkout Page JavaScript
        let selectedAddressId = null;
        let isEditMode = false;
        const totalAmount = <%= totalAmount %>;
        const walletBalance = <%= walletBalance || 0 %>;
        const COD_LIMIT = 1000; // COD limit in INR

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            console.log("‚úÖ Checkout page loaded");
            initializeCheckout();
            checkOrderAvailability();
            initializeCODRestriction();
        });

        // NEW: Initialize COD restriction
        function initializeCODRestriction() {
            if (totalAmount > COD_LIMIT) {
                const codOption = document.getElementById('cod-option');
                const codRadio = document.getElementById('cod');
                
                codRadio.disabled = true;
                
                // If COD was previously selected, auto-switch to online payment
                if (codRadio.checked) {
                    const onlinePayment = document.getElementById('razorpay');
                    if (onlinePayment) {
                        onlinePayment.checked = true;
                        handlePaymentChange('razorpay');
                    }
                }
                
                updatePlaceOrderButtonState();
            }
        }

        // NEW: Handle payment method change with COD validation
        function handlePaymentChange(paymentMethod) {
            console.log("üí∞ Payment method changed to:", paymentMethod);
            
            if (paymentMethod === 'cod' && totalAmount > COD_LIMIT) {
                Swal.fire({
                    icon: 'error',
                    title: 'COD Not Available',
                    html: `
                        <div style="text-align: left; padding: 10px;">
                            <p><strong>‚ùå Cash on Delivery is not available</strong></p>
                            <p><strong>Order Total:</strong> ‚Çπ${totalAmount.toLocaleString()}</p>
                            <p><strong>COD Limit:</strong> ‚Çπ${COD_LIMIT.toLocaleString()}</p>
                            <hr style="margin: 10px 0;">
                            <p style="color: #666;">Please select <strong>Pay Online</strong> or <strong>Wallet</strong> to proceed.</p>
                        </div>
                    `,
                    confirmButtonText: 'Switch to Online Payment',
                    confirmButtonColor: '#3085d6',
                    allowOutsideClick: false
                }).then(() => {
                    // Auto-switch to online payment
                    const onlinePayment = document.getElementById('razorpay');
                    const razorpayOption = document.querySelector('[data-method="razorpay"]');
                    
                    if (onlinePayment && razorpayOption) {
                        onlinePayment.checked = true;
                        razorpayOption.classList.add('selected');
                        
                        // Remove selection from COD
                        const codOption = document.querySelector('[data-method="cod"]');
                        if (codOption) {
                            codOption.classList.remove('selected');
                        }
                    }
                });
                
                // Revert COD selection
                document.getElementById('cod').checked = false;
                return false;
            }
            
            // Update visual selection for valid payment methods
            const paymentOptions = document.querySelectorAll('.payment-option');
            paymentOptions.forEach(option => {
                option.classList.remove('selected');
                if (option.dataset.method === paymentMethod) {
                    option.classList.add('selected');
                }
            });
            
            updatePlaceOrderButtonState();
            return true;
        }

        // NEW: Update place order button state
        function updatePlaceOrderButtonState() {
            const placeOrderBtn = document.getElementById('placeOrderBtn');
            const hasUnavailableItems = document.querySelectorAll('.order-item.blocked, .order-item.out-of-stock').length > 0;
            const selectedPayment = document.querySelector('input[name="paymentMethod"]:checked');
            const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
            
            if (hasUnavailableItems || !selectedPayment || !selectedAddress) {
                placeOrderBtn.disabled = true;
                placeOrderBtn.style.opacity = '0.6';
                placeOrderBtn.style.cursor = 'not-allowed';
                
                if (hasUnavailableItems) {
                    placeOrderBtn.textContent = 'Cannot Place Order (Unavailable Items)';
                } else if (!selectedAddress) {
                    placeOrderBtn.textContent = 'Select Delivery Address';
                } else {
                    placeOrderBtn.textContent = 'Select Payment Method';
                }
            } else {
                placeOrderBtn.disabled = false;
                placeOrderBtn.style.opacity = '1';
                placeOrderBtn.style.cursor = 'pointer';
                placeOrderBtn.textContent = `Proceed to Buy - ‚Çπ${totalAmount.toLocaleString()}`;
            }
        }

        function checkOrderAvailability() {
            const blockedItems = document.querySelectorAll('.order-item.blocked');
            const outOfStockItems = document.querySelectorAll('.order-item.out-of-stock');
            
            if (blockedItems.length > 0 || outOfStockItems.length > 0) {
                updatePlaceOrderButtonState();
            } else {
                updatePlaceOrderButtonState();
            }
        }

        function validateAndPlaceOrder() {
            // Check unavailable items
            const blockedItems = document.querySelectorAll('.order-item.blocked');
            const outOfStockItems = document.querySelectorAll('.order-item.out-of-stock');
            
            if (blockedItems.length > 0 || outOfStockItems.length > 0) {
                let errorMessage = "Cannot place order due to the following issues:\n\n";
                
                if (blockedItems.length > 0) {
                    errorMessage += "üîí Blocked Products:\n";
                    blockedItems.forEach(item => {
                        const productName = item.querySelector('h4').textContent;
                        errorMessage += `‚Ä¢ ${productName}\n`;
                    });
                    errorMessage += "\n";
                }
                
                if (outOfStockItems.length > 0) {
                    errorMessage += "üì¶ Out of Stock:\n";
                    outOfStockItems.forEach(item => {
                        const productName = item.querySelector('h4').textContent;
                        const size = item.querySelector('.item-size').textContent.replace('Size: ', '');
                        errorMessage += `‚Ä¢ ${productName} (${size})\n`;
                    });
                }
                
                errorMessage += "\nPlease remove these items from your cart.";
                
                Swal.fire({
                    icon: 'error',
                    title: 'Order Cannot Be Placed',
                    text: errorMessage,
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#d33'
                });
                return;
            }

            // Check address
            if (!selectedAddressId) {
                Swal.fire({
                    icon: 'error',
                    title: 'Address Required',
                    text: 'Please select a delivery address to proceed',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }

            // Check payment method
            const selectedPayment = document.querySelector('input[name="paymentMethod"]:checked');
            if (!selectedPayment) {
                Swal.fire({
                    icon: 'error',
                    title: 'Payment Method Required',
                    text: 'Please select a payment method to proceed',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }

            // Final COD validation
            if (selectedPayment.value === 'cod' && totalAmount > COD_LIMIT) {
                Swal.fire({
                    icon: 'error',
                    title: 'COD Not Available',
                    html: `
                        <div style="text-align: left; padding: 10px;">
                            <p><strong>‚ùå Cash on Delivery Restricted</strong></p>
                            <p><strong>Your Order:</strong> ‚Çπ${totalAmount.toLocaleString()}</p>
                            <p><strong>COD Limit:</strong> ‚Çπ${COD_LIMIT.toLocaleString()}</p>
                            <hr style="margin: 10px 0;">
                            <p style="color: #666;">For orders above ‚Çπ1,000, please use:</p>
                            <ul style="color: #666; margin-left: 20px;">
                                <li>üí≥ Pay Online (Card/UPI)</li>
                                <li>üíº Wallet Payment</li>
                            </ul>
                        </div>
                    `,
                    confirmButtonText: 'Continue with Online Payment',
                    confirmButtonColor: '#28a745',
                    allowOutsideClick: false
                });
                return;
            }

            // All validations passed
            placeOrder();
        }

        function removeItem(itemId) {
            Swal.fire({
                title: 'Remove Item?',
                text: 'This item is unavailable and will be removed from your cart',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, remove it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/removeItem', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ itemId })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            window.location.reload();
                        } else {
                            Swal.fire('Error', 'Failed to remove item', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error removing item:', error);
                        Swal.fire('Error', 'Failed to remove item', 'error');
                    });
                }
            });
        }

        function initializeCheckout() {
            console.log("üîÑ Initializing checkout...");
            
            // Set default address
            const defaultAddress = document.querySelector('input[name="selectedAddress"]:checked');
            if (defaultAddress) {
                selectedAddressId = defaultAddress.value;
            }

            // Address card click handlers
            const addressCards = document.querySelectorAll('.address-card');
            addressCards.forEach(card => {
                card.addEventListener('click', function(e) {
                    if (!e.target.classList.contains('btn')) {
                        const radio = card.querySelector('input[type="radio"]');
                        radio.checked = true;
                        selectAddress(radio.value);
                    }
                });
            });

            // Payment option click handlers
            const paymentOptions = document.querySelectorAll('.payment-option');
            paymentOptions.forEach(option => {
                option.addEventListener('click', function() {
                    const radio = option.querySelector('input[type="radio"]');
                    if (!radio.disabled) {
                        paymentOptions.forEach(opt => opt.classList.remove('selected'));
                        option.classList.add('selected');
                        radio.checked = true;
                        handlePaymentChange(radio.value);
                    }
                });
            });

            // Modal click outside handler
            const modal = document.getElementById('addressModal');
            if (modal) {
                window.addEventListener('click', function(event) {
                    if (event.target === modal) {
                        closeAddressModal();
                    }
                });
            }

            // Address form submit handler
            const addressForm = document.getElementById('addressForm');
            if (addressForm) {
                addressForm.addEventListener('submit', handleAddressSubmit);
            }

            // Address radio change handlers
            document.querySelectorAll('input[name="selectedAddress"]').forEach(radio => {
                radio.addEventListener('change', () => {
                    updatePlaceOrderButtonState();
                });
            });

            // Payment radio change handlers (backup)
            document.querySelectorAll('input[name="paymentMethod"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    if (!this.disabled) {
                        handlePaymentChange(this.value);
                    }
                });
            });
            
            console.log("‚úÖ Checkout initialized");
            updatePlaceOrderButtonState();
        }

        function selectAddress(addressId) {
            selectedAddressId = addressId;
            const addressCards = document.querySelectorAll('.address-card');
            addressCards.forEach(card => {
                card.classList.remove('selected');
                if (card.dataset.addressId === addressId) {
                    card.classList.add('selected');
                }
            });
            updatePlaceOrderButtonState();
        }

        function openAddressModal() {
            const modal = document.getElementById('addressModal');
            const modalTitle = document.getElementById('modalTitle');
            const form = document.getElementById('addressForm');
            
            isEditMode = false;
            modalTitle.textContent = 'Add New Address';
            form.reset();
            document.getElementById('addressId').value = '';
            document.getElementById('isDefault').checked = false;
            
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeAddressModal() {
            const modal = document.getElementById('addressModal');
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
            const form = document.getElementById('addressForm');
            form.reset();
            isEditMode = false;
        }

        function editAddress(addressId) {
            fetch(`/getAddress/${addressId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Failed to fetch address');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        const address = data.address;
                        
                        document.getElementById('addressId').value = address._id;
                        document.getElementById('name').value = address.name || '';
                        document.getElementById('email').value = address.email || '';
                        document.getElementById('number').value = address.number || '';
                        document.getElementById('houseName').value = address.houseName || '';
                        document.getElementById('street').value = address.street || '';
                        document.getElementById('city').value = address.city || '';
                        document.getElementById('state').value = address.state || '';
                        document.getElementById('country').value = address.country || 'India';
                        document.getElementById('pincode').value = address.pincode || '';
                        document.getElementById('saveAs').value = address.saveAs || '';
                        document.getElementById('isDefault').checked = address.isDefault || false;
                        
                        document.getElementById('modalTitle').textContent = 'Edit Address';
                        isEditMode = true;
                        
                        const modal = document.getElementById('addressModal');
                        modal.style.display = 'block';
                        document.body.style.overflow = 'hidden';
                    } else {
                        throw new Error(data.message || 'Failed to load address');
                    }
                })
                .catch(error => {
                    console.error('Error fetching address:', error);
                    Swal.fire('Error', 'Failed to load address details', 'error');
                });
        }

        function handleAddressSubmit(e) {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const addressData = {
                name: formData.get('name'),
                email: formData.get('email'),
                number: formData.get('number'),
                houseName: formData.get('houseName'),
                street: formData.get('street'),
                city: formData.get('city'),
                state: formData.get('state'),
                country: formData.get('country'),
                pincode: formData.get('pincode'),
                saveAs: formData.get('saveAs'),
                isDefault: formData.get('isDefault') === 'on'
            };

            if (isEditMode) {
                addressData.addressId = formData.get('addressId');
            }

            const url = isEditMode ? '/updateAddress' : '/addAddress';
            const method = isEditMode ? 'PUT' : 'POST';

            fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(addressData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: isEditMode ? 'Address Updated' : 'Address Added',
                        text: data.message || 'Address saved successfully'
                    }).then(() => {
                        closeAddressModal();
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: data.message || 'Failed to save address'
                    });
                }
            })
            .catch(error => {
                console.error('Error saving address:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to save address. Please try again.'
                });
            });
        }

        function placeOrder() {
            console.log("üîÑ Starting place order process...");
            
            if (!selectedAddressId) {
                Swal.fire({
                    icon: 'error',
                    title: 'Address Required',
                    text: 'Please select a delivery address'
                });
                return;
            }

            const selectedPayment = document.querySelector('input[name="paymentMethod"]:checked');
            if (!selectedPayment) {
                Swal.fire({
                    icon: 'error',
                    title: 'Payment Method Required',
                    text: 'Please select a payment method'
                });
                return;
            }

            const paymentMethod = selectedPayment.value;
            console.log("üí∞ Selected payment method:", paymentMethod);

            if (paymentMethod === 'cod') {
                placeCODOrder();
            } else if (paymentMethod === 'razorpay') {
                initiateRazorpayPayment();
            } else if (paymentMethod === 'wallet') {
                initiateWalletPayment();
            }
        }

        function placeCODOrder() {
            console.log("üöö Placing COD order...");

            Swal.fire({
                title: 'Confirm Cash on Delivery Order',
                html: `
                    <div style="text-align: left; padding: 1rem;">
                        <p style="margin-bottom: 1rem;"><strong>Payment Method:</strong> Cash on Delivery</p>
                        <p style="margin-bottom: 1rem;"><strong>Total Amount:</strong> ‚Çπ${totalAmount.toLocaleString()}</p>
                        <p style="color: #666; font-size: 0.9rem;">You will pay when you receive your order.</p>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Confirm Order!',
                cancelButtonText: 'Cancel',
                showLoaderOnConfirm: true,
                preConfirm: async () => {
                    try {
                        const orderData = {
                            addressId: selectedAddressId,
                            paymentMethod: 'cod'
                        };

                        const response = await fetch('/placeOrder', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(orderData)
                        });

                        const data = await response.json();
                        
                        if (!response.ok) {
                            if (data.details && data.details.length > 0) {
                                const errorHtml = `
                                    <div style="text-align: left;">
                                        <p>Sorry, we encountered stock issues with your order:</p>
                                        <ul style="text-align: left; margin-left: 20px;">
                                            ${data.details.map(error => 
                                                `<li><strong>${error.productName}</strong> - ${error.message}</li>`
                                            ).join('')}
                                        </ul>
                                        <p>Please update your cart and try again.</p>
                                    </div>
                                `;
                                
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Order Failed',
                                    html: errorHtml,
                                    confirmButtonText: 'OK',
                                    confirmButtonColor: '#d33'
                                });
                                
                                return { stockError: true };
                            }
                            throw new Error(data.error || 'Failed to place order');
                        }
                        
                        return data;
                    } catch (error) {
                        Swal.showValidationMessage(`Order failed: ${error.message}`);
                    }
                }
            }).then((result) => {
                if (result.isConfirmed && result.value && !result.value.stockError) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Order Successful üéâ',
                        html: `
                            <div style="text-align: left;">
                                <p><strong>Order Number:</strong> ${result.value.orderNumber}</p>
                                <p><strong>Total Amount:</strong> ‚Çπ${result.value.orderAmount}</p>
                                <p>Your order has been placed successfully!</p>
                            </div>
                        `,
                        showConfirmButton: false,
                        timer: 3000
                    });

                    setTimeout(() => {
                        window.location.href = `/orderSuccess/${result.value.orderId}`;
                    }, 3000);
                }
            });
        }

        function initiateRazorpayPayment() {
            console.log("üí≥ Initiating Razorpay payment...");
            
            Swal.fire({
                title: 'Creating Order',
                text: 'Please wait...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            const orderData = {
                addressId: selectedAddressId,
                paymentMethod: 'razorpay'
            };

            fetch('/placeOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(orderData)
            })
            .then(response => response.json())
            .then(data => {
                console.log("üì¶ Order created response:", data);
                
                if (data.success && data.requiresPayment) {
                    return fetch('/create-razorpay-order', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            amount: data.orderAmount,
                            orderId: data.orderId
                        })
                    }).then(razorpayResponse => razorpayResponse.json())
                      .then(razorpayData => {
                          return { razorpayData, orderInfo: data };
                      });
                } else {
                    throw new Error(data.error || 'Failed to create order');
                }
            })
            .then(({ razorpayData, orderInfo }) => {
                console.log("üí≥ Razorpay order response:", razorpayData);
                Swal.close();
                
                if (razorpayData.success) {
                    openRazorpayCheckout(razorpayData.order, orderInfo.orderId);
                } else {
                    throw new Error(razorpayData.error || 'Failed to create payment order');
                }
            })
            .catch(error => {
                console.error('Payment initiation error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Order Error',
                    text: error.message || 'Failed to process order. Please try again.'
                });
            });
        }

        function openRazorpayCheckout(razorpayOrder, orderId) {
            console.log("üîì Opening Razorpay checkout...");
            
            const options = {
                key: '<%= razorpayKeyId %>',
                amount: razorpayOrder.amount,
                currency: razorpayOrder.currency,
                name: 'A L L S C O U T S',
                description: 'Order Payment',
                order_id: razorpayOrder.id,
                handler: function(response) {
                    verifyRazorpayPayment(response, orderId);
                },
                prefill: {
                    name: '<%= user.name %>',
                    email: '<%= user.email %>',
                    contact: '<%= user.phone %>'
                },
                theme: {
                    color: '#c89666'
                },
                modal: {
                    ondismiss: function() {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Payment Cancelled',
                            text: 'You cancelled the payment. Redirecting to order details...',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => {
                            window.location.href = `/orderFailure/${orderId}?error=Payment cancelled by user`;
                        });
                    }
                }
            };

            const rzp = new Razorpay(options);
            
            rzp.on('payment.failed', function(response) {
                console.error('Payment failed:', response.error);
                
                fetch('/payment-failed', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        orderId: orderId,
                        error: response.error
                    })
                }).then(() => {
                    window.location.href = `/orderFailure/${orderId}?error=${encodeURIComponent(response.error.description)}`;
                });
            });
            
            rzp.open();
        }

        function verifyRazorpayPayment(paymentResponse, orderId) {
            console.log("‚úÖ Verifying Razorpay payment...");
            
            Swal.fire({
                title: 'Verifying Payment',
                text: 'Please wait while we verify your payment...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            fetch('/verify-payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    razorpay_order_id: paymentResponse.razorpay_order_id,
                    razorpay_payment_id: paymentResponse.razorpay_payment_id,
                    razorpay_signature: paymentResponse.razorpay_signature,
                    orderId: orderId
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Payment Successful! üéâ',
                        html: `
                            <div style="text-align: left;">
                                <p><strong>Order ID:</strong> ${data.orderId}</p>
                                <p><strong>Payment ID:</strong> ${data.paymentId}</p>
                                <p>Your order has been placed successfully.</p>
                            </div>
                        `,
                        showConfirmButton: false,
                        timer: 3000
                    });

                    setTimeout(() => {
                        window.location.href = `/orderSuccess/${data.orderId}`;
                    }, 3000);
                } else {
                    throw new Error(data.message || 'Payment verification failed');
                }
            })
            .catch(error => {
                console.error('Payment verification error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Payment Failed',
                    text: 'Payment verification failed. Please contact support if amount was deducted.'
                });
            });
        }

        function initiateWalletPayment() {
            console.log("üíº Initiating Wallet payment...");
            
            if (walletBalance < totalAmount) {
                Swal.fire({
                    icon: 'error',
                    title: 'Insufficient Wallet Balance',
                    html: `
                        <div style="text-align: left;">
                            <p><strong>Order Amount:</strong> ‚Çπ${totalAmount.toLocaleString()}</p>
                            <p><strong>Wallet Balance:</strong> ‚Çπ${walletBalance.toLocaleString()}</p>
                            <p style="color: #d33;">Insufficient balance. Please top up or choose another method.</p>
                        </div>
                    `,
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#d33'
                });
                return;
            }

            Swal.fire({
                title: 'Confirm Wallet Payment',
                html: `
                    <div style="text-align: left; padding: 1rem;">
                        <p style="margin-bottom: 1rem;"><strong>Payment Method:</strong> Wallet</p>
                        <p style="margin-bottom: 1rem;"><strong>Order Amount:</strong> ‚Çπ${totalAmount.toLocaleString()}</p>
                        <p style="margin-bottom: 1rem;"><strong>Wallet Balance:</strong> ‚Çπ${walletBalance.toLocaleString()}</p>
                        <p style="color: #28a745; font-weight: bold;">After payment: ‚Çπ${(walletBalance - totalAmount).toLocaleString()} remaining</p>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Pay with Wallet',
                cancelButtonText: 'Cancel',
                showLoaderOnConfirm: true,
                preConfirm: async () => {
                    try {
                        const orderData = {
                            addressId: selectedAddressId,
                            paymentMethod: 'wallet'
                        };

                        const response = await fetch('/placeOrder', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(orderData)
                        });

                        const data = await response.json();
                        
                        if (!response.ok) {
                            if (data.details && data.details.length > 0) {
                                const errorHtml = `
                                    <div style="text-align: left;">
                                        <p>Stock issues detected:</p>
                                        <ul style="margin-left: 20px;">
                                            ${data.details.map(error => `<li>${error.productName}: ${error.message}</li>`).join('')}
                                        </ul>
                                    </div>
                                `;
                                Swal.fire('Order Failed', errorHtml, 'error');
                                return { stockError: true };
                            }
                            throw new Error(data.error || 'Failed to place order');
                        }
                        
                        return data;
                    } catch (error) {
                        Swal.showValidationMessage(`Order failed: ${error.message}`);
                    }
                }
            }).then((result) => {
                if (result.isConfirmed && result.value && !result.value.stockError) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Order Successful üéâ',
                        html: `
                            <div style="text-align: left;">
                                <p><strong>Order Number:</strong> ${result.value.orderNumber}</p>
                                <p><strong>Amount Paid:</strong> ‚Çπ${result.value.orderAmount}</p>
                                <p><strong>Remaining Balance:</strong> ‚Çπ${(walletBalance - result.value.orderAmount).toLocaleString()}</p>
                            </div>
                        `,
                        showConfirmButton: false,
                        timer: 3000
                    });

                    setTimeout(() => {
                        window.location.href = `/orderSuccess/${result.value.orderId}`;
                    }, 3000);
                }
            });
        }

        function toggleCouponDropdown(event) {
            event.preventDefault();
            const dropdown = document.getElementById('coupon-dropdown');
            dropdown.style.display = dropdown.style.display === 'none' ? 'block' : 'none';
        }

        function applyCoupon() {
            const code = document.getElementById('coupon-select').value;
            if (!code) {
                Swal.fire('Error', 'Please select a coupon', 'error');
                return;
            }

            fetch('/applyCoupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ code })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.reload();
                } else {
                    Swal.fire('Error', data.message || 'Failed to apply coupon', 'error');
                }
            })
            .catch(error => {
                console.error('Error applying coupon:', error);
                Swal.fire('Error', 'Failed to apply coupon', 'error');
            });
        }

        function removeCoupon() {
            fetch('/removeCoupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.reload();
                } else {
                    Swal.fire('Error', 'Failed to remove coupon', 'error');
                }
            })
            .catch(error => {
                console.error('Error removing coupon:', error);
                Swal.fire('Error', 'Failed to remove coupon', 'error');
            });
        }
    </script>
