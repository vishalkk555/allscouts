function verifyRazorpayPayment(response, orderId) {
    console.log("Verifying Razorpay RETRY payment...");

    Swal.fire({
        title: 'Verifying Payment',
        text: 'Please wait...',
        allowOutsideClick: false,
        didOpen: () => Swal.showLoading()
    });

    // Use the NEW retry-specific endpoint
    fetch('/verify-retry-payment', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
            razorpay_order_id: response.razorpay_order_id,
            razorpay_payment_id: response.razorpay_payment_id,
            razorpay_signature: response.razorpay_signature,
            orderId: orderId
        })
    })
    .then(res => res.json())
    .then(data => {
        Swal.close();

        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: 'Payment Successful ðŸŽ‰',
                text: 'Your payment has been confirmed!',
                timer: 2000,
                showConfirmButton: false
            }).then(() => {
                window.location.href = `/orderSuccess/${orderId}`;
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Verification Failed',
                text: data.message || 'Payment verification failed.',
                timer: 2500,
                showConfirmButton: false
            }).then(() => {
                window.location.href = `/orderFailure/${orderId}`;
            });
        }
    })
    .catch(err => {
        Swal.close();
        console.error('Verification error:', err);
        Swal.fire({
            icon: 'error',
            title: 'Server Error',
            text: 'Unable to verify payment. Redirecting...',
            timer: 2500,
            showConfirmButton: false
        }).then(() => {
            window.location.href = `/orderFailure/${orderId}`;
        });
    });
}
</script>

