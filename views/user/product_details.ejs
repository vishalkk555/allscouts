      function addToWishlist(productId) {

    // Get current offer price if available
    const priceElement = document.querySelector('.current-price');
    const priceText = priceElement.textContent.replace('₹', '').replace(',', '').trim();
    const currentPrice = parseFloat(priceText);

    const wishlistBtn = document.querySelector('.wishlist-btn');
    const originalIcon = wishlistBtn.innerHTML;
    wishlistBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
    wishlistBtn.disabled = true;

    fetch('/wishlist/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ 
            productId: productId,
            price: currentPrice // Optional: store current price for reference
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: 'Added to Wishlist!',
                text: 'Product added to your wishlist',
                showConfirmButton: false,
                timer: 1500
            });
            
            // Update wishlist icon to filled heart
            wishlistBtn.innerHTML = '<i class="fas fa-heart"></i>';
            wishlistBtn.classList.add('in-wishlist');
            
            // Update wishlist count if you have one
            updateWishlistCount();
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: data.message || 'Failed to add to wishlist',
                confirmButtonColor: '#e74c3c'
            });
            wishlistBtn.innerHTML = originalIcon;
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred while adding to wishlist',
            confirmButtonColor: '#e74c3c'
        });
        wishlistBtn.innerHTML = originalIcon;
    })
    .finally(() => {
        wishlistBtn.disabled = false;
    });
}

function updateWishlistCount() {
    fetch('/wishlist/count')
        .then(response => response.json())
        .then(data => {
            const wishlistCountElement = document.querySelector('.wishlist-count');
            if (wishlistCountElement && data.count !== undefined) {
                wishlistCountElement.textContent = data.count;
            }
        })
        .catch(error => console.error('Error updating wishlist count:', error));
}




       

