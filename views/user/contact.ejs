<style>
.contact-page {
  font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
  color: #1a1a1a;
  background: #ffffff;
}

.contact-hero {
  text-align: center;
  padding: 80px 20px 60px;
 
}

.contact-hero-title {
  font-size: 2.5rem;
  font-weight: 500;
  letter-spacing: 4px;
  text-transform: uppercase;
  margin: 0 0 20px 0;
  color: #1a1a1a;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}

.contact-hero-subtitle {
  font-size: 1.2rem;
  color: #666;
  font-weight: 300;
  letter-spacing: 1px;
}

.contact-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 80px 20px;
}

.contact-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 50px;
  margin-bottom: 80px;
}

.contact-card {
  text-align: center;
  padding: 50px 30px;
  background: rgb(0, 0, 0);
  border: 1px solid #e5e5e5;
  border-radius: 25px;
  transition: all 0.3s ease;
}

.contact-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.contact-icon {
  width: 60px;
  height: 60px;
  margin: 0 auto 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  color:white;
  border: 2px solid rgb(226, 148, 84);
  border-radius: 50%;
}

.contact-card-title {
  font-size: 1.4rem;
  font-weight: 500;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin-bottom: 20px;
  color: #ffffff;
}

.contact-card-info {
  font-size: 1rem;
  line-height: 1.8;
  color: #ffffff;
  margin-bottom: 10px;
}

.contact-card-link {
  color: #ffffff;
  text-decoration: none;
  transition: color 0.3s ease;
  font-weight: 500;
}

.contact-card-link:hover {
  color: #ffffff;
}

.contact-hours-section {
  max-width: 700px;
  margin: 0 auto 80px;
  text-align: center;
  padding: 60px 40px;
  background: #1a1a1a;
  color: white;
}

.contact-hours-title {
  font-size: 2rem;
  font-weight: 300;
  letter-spacing: 3px;
  text-transform: uppercase;
  margin-bottom: 40px;
  color: #e5e5e5;
}

.contact-hours-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.contact-hours-item {
  display: flex;
  justify-content: space-between;
  padding: 15px 0;
  border-bottom: 1px solid rgba(255,255,255,0.1);
  font-size: 1.05rem;
}

.contact-hours-item:last-child {
  border-bottom: none;
}

.contact-hours-day {
  font-weight: 500;
  letter-spacing: 1px;
}

.contact-hours-time {
  color: #ffffff;
}

.contact-location-section {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
}

.contact-location-title {
  font-size: 2rem;
  font-weight: 300;
  letter-spacing: 3px;
  text-transform: uppercase;
  margin-bottom: 30px;
  color: #1a1a1a;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}

.contact-location-address {
  font-size: 1.1rem;
  line-height: 1.9;
  color: #666;
  margin-bottom: 40px;
}

.contact-map {
  width: 100%;
  height: 400px;
  border: 1px solid #e5e5e5;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.contact-social-section {
  text-align: center;
  padding: 80px 20px;
  background: white;
  margin-top: 80px;
}

.contact-social-title {
  font-size: 2rem;
  font-weight: 300;
  letter-spacing: 3px;
  text-transform: uppercase;
  margin-bottom: 40px;
  color: #1a1a1a;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
}

.contact-social-links {
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
}

.contact-social-link {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid #1a1a1a;
  border-radius: 50%;
  color: #1a1a1a;
  text-decoration: none;
  font-size: 1.3rem;
  transition: all 0.3s ease;
}

.contact-social-link:hover {
  background: #1a1a1a;
  color: white;
}

@media (max-width: 768px) {
  .contact-hero-title {
    font-size: 2.5rem;
    letter-spacing: 3px;
  }

  .contact-hero-subtitle {
    font-size: 1rem;
  }

  .contact-container {
    padding: 50px 20px;
  }

  .contact-grid {
    gap: 30px;
  }

  .contact-card {
    padding: 40px 20px;
  }

  .contact-hours-section {
    padding: 40px 20px;
  }

  .contact-hours-item {
    flex-direction: column;
    gap: 5px;
    text-align: left;
  }

  .contact-map {
    height: 300px;
  }

  .contact-social-links {
    gap: 20px;
  }
}
</style>

