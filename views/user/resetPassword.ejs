<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <style>
        .reset-password-container {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #f7f7f7 0%, #f7f7f7 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 20px;
        }

        .reset-password-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            padding: 40px;
            width: 100%;
            max-width: 400px;
        }

        .reset-password-title {
            font-size: 28px;
            font-weight: 600;
            text-align: center;
            margin-bottom: 8px;
            color: #333;
        }

        .reset-password-subtitle {
            font-size: 14px;
            color: #666;
            text-align: center;
            margin-bottom: 30px;
            line-height: 1.5;
        }

        .reset-password-form-group {
            margin-bottom: 20px;
        }

        .reset-password-label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            color: #555;
            margin-bottom: 8px;
        }

        .reset-password-input {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
        }

        .reset-password-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .reset-password-button {
            width: 100%;
            background: #000;
            color: white;
            border: none;
            padding: 14px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 20px;
        }

        .reset-password-button:hover {
            background: #333;
        }

        .reset-password-button:disabled {
            background: #ccc;
            cursor: not-allowed;
        }

        .reset-password-back-link {
            text-align: center;
        }

        .reset-password-back-link a {
            color: #667eea;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
        }

        .reset-password-back-link a:hover {
            text-decoration: underline;
        }

        .reset-password-error {
            color: #e74c3c;
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
        }

        .reset-password-success {
            color: #27ae60;
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
        }

        .reset-password-strength {
            font-size: 12px;
            margin-top: 5px;
            color: #666;
        }

        .reset-password-strength.weak {
            color: #e74c3c;
        }

        .reset-password-strength.medium {
            color: #f39c12;
        }

        .reset-password-strength.strong {
            color: #27ae60;
        }
    </style>
</head>
<body>
    <div class="reset-password-container">
        <div class="reset-password-card">
            <h2 class="reset-password-title">Reset Password</h2>
            <p class="reset-password-subtitle">Enter your new password below.</p>
            
            <form id="resetPasswordForm">
                <div class="reset-password-form-group">
                    <label class="reset-password-label" for="newPassword">New Password*</label>
                    <input type="password" id="newPassword" name="newPassword" class="reset-password-input" required>
                    <div class="reset-password-strength" id="passwordStrength"></div>
                </div>
                
                <div class="reset-password-form-group">
                    <label class="reset-password-label" for="confirmPassword">Confirm Password*</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="reset-password-input" required>
                </div>
                
                <button type="submit" class="reset-password-button" id="resetPasswordBtn">Reset Password</button>
                
                <div id="message"></div>
                
                <div class="reset-password-back-link">
                    <a href="/login">Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Password strength checker
        function checkPasswordStrength(password) {
            const strengthElement = document.getElementById('passwordStrength');
            let strength = 0;
            let feedback = '';

            if (password.length >= 8) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/[0-9]/.test(password)) strength++;
            if (/[^A-Za-z0-9]/.test(password)) strength++;

            switch (strength) {
                case 0:
                case 1:
                case 2:
                    strengthElement.textContent = 'Weak password';
                    strengthElement.className = 'reset-password-strength weak';
                    break;
                case 3:
                case 4:
                    strengthElement.textContent = 'Medium strength';
                    strengthElement.className = 'reset-password-strength medium';
                    break;
                case 5:
                    strengthElement.textContent = 'Strong password';
                    strengthElement.className = 'reset-password-strength strong';
                    break;
            }
        }

        document.getElementById('newPassword').addEventListener('input', (e) => {
            checkPasswordStrength(e.target.value);
        });

        // Password confirmation validation
        function validatePasswords() {
            const password = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const messageDiv = document.getElementById('message');

            if (confirmPassword && password !== confirmPassword) {
                messageDiv.innerHTML = '<div class="reset-password-error">Passwords do not match</div>';
                return false;
            } else {
                messageDiv.innerHTML = '';
                return true;
            }
        }

        document.getElementById('confirmPassword').addEventListener('input', validatePasswords);

        document.getElementById('resetPasswordForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const messageDiv = document.getElementById('message');
            const resetBtn = document.getElementById('resetPasswordBtn');
            
            // Validate passwords match
            if (newPassword !== confirmPassword) {
                messageDiv.innerHTML = '<div class="reset-password-error">Passwords do not match</div>';
                return;
            }

            // Validate password strength
            if (newPassword.length < 6) {
                messageDiv.innerHTML = '<div class="reset-password-error">Password must be at least 6 characters long</div>';
                return;
            }
            
            resetBtn.disabled = true;
            resetBtn.textContent = 'Resetting...';
            
            try {
                const response = await fetch('/resetPassword', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ newPassword, confirmPassword })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    messageDiv.innerHTML = '<div class="reset-password-success">' + data.message + '</div>';
                    setTimeout(() => {
                        window.location.href = data.redirectUrl;
                    }, 2000);
                } else {
                    messageDiv.innerHTML = '<div class="reset-password-error">' + data.message + '</div>';
                }
            } catch (error) {
                messageDiv.innerHTML = '<div class="reset-password-error">Something went wrong. Please try again.</div>';
            }
            
            resetBtn.disabled = false;
            resetBtn.textContent = 'Reset Password';
        });
    </script>
</body>
</html>